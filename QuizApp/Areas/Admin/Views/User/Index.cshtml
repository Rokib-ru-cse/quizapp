@model List<IdentityUser>
<div class="container">
    <a class="btn btn-outline-primary my-2" asp-action="Create">Create User</a>
    <div class="row">
        <div class="col-md-8 offset-2">
            <h1 class="text-center">Users list</h1>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center">No User Account</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td><a asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                                <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                                <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
